                </td>
                <td>
                    Amount
                </td>
                <td>
                    PhoneNo
                </td>
                <td>
                    Location
                </td>
            </tr>
        </thead>*@
        <tbody>
            @foreach (Dataset dataset in Model)
            {
                <tr style="color:white">
                    <td>
                        @dataset.Name
                    </td>
                    <td>
                        @dataset.Email
                    </td>
                    <td>
                        @dataset.Amount
                    </td>
                    <td>
                        @dataset.PhoneNo
                    </td>
                    <td>
                        @dataset.Location
                    </td>

                </tr>
            }
        </tbody>
    </table>
}